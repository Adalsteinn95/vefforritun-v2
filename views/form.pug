extends layout

block content

  if (errorMsg) 
    ul
      each key in errorMsg
        li=key

  form(method='post' action='/')
    div
      label(for='name') Nafn
      input(type='text',name='name')
    div
      label(for='email') Netfang
      input(type='email',name='email')
    div
      label(for='ssn') Kennitala
      input(type='ssn' name='ssn')
    div
      label(for="amount") Amount:
      input(type="number", name="amount")
    button(type='submit') Senda

  include ./footer.pug
  